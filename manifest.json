{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page red",
    "default_icon": { 
      "19" : "19icons.png",
      "38" : "38icons.png"
    }
    
  },
  "icons": { "16" : "16icons.png",
             "48" : "48icons.png",
            "128" : "128icons.png",
    

  "manifest_version": 2
}
